{
  "name": "minecraft-server-launcher",
  "description": "minecraft Server Launcher",
  "version": "1.0.0",
  "license": "MIT",
  "keywords": [
    "minecraft",
    "server",
    "launcher"
  ],
  "author": "阿友",
  "repository": {},
  "scripts": {
    "start": "node app.js",
    "start-electron": "electron .",
    "builder-pack": "electron-builder --dir",
    "builder-dist": "electron-builder",
    "build-icon-1": "electron-icon-builder --input=./public/minecraft-512x512.png --output=build --flatten",
    "build-icon-2": "electron-icon-builder --input=./public/minecraft-block-840x859.png --output=build --flatten"
  },
  "main": "./app/index.js",
  "build": {
    "appId": "minecraft.server.launcher",
    "productName": "minecraft Server Launcher",
    "extraResources": [],
    "files": [
      "package.json",
      "app/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "server",
      "output": "./build",
      "app": "./"
    },
    "asarUnpack": [
      "server/**/*"
    ],
    "extraFiles": [
      "server/**/*"
    ],
    "publish": [
      {
        "provider": "generic",
        "url": "http://127.0.0.1:8080/"
      }
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true,
      "createDesktopShortcut": true
    },
    "mac": {
      "icon": "build/icons/icon.icns"
    },
    "linux": {
      "icon": "build/icons"
    },
    "win": {
      "icon": "build/icons/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "byte-size": "^7.0.1",
    "electron-updater": "^4.3.8",
    "electron-util": "^0.14.2",
    "electron-progressbar": "^2.0.0",
    "minecraft-wrap": "^1.3.0",
    "minecraft-folder-path": "^1.2.0",
    "minecraft-protocol": "^1.24.1",
    "sqlite3": "^5.0.2",
    "mustache": "^4.1.0",
    "node-os-utils": "^1.3.5",
    "public-ip": "^4.0.3",
    "internal-ip": "^6.2.0",
    "get-port": "^5.1.1",
    "pidusage": "^2.0.21",
    "rimraf": "^3.0.2",
    "mkdirp": "^1.0.4"
  },
  "devDependencies": {
    "electron": "^12.0.2",
    "electron-builder": "^22.10.5",
    "electron-icon-builder": "^2.0.1"
  }
}
